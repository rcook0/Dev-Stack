{
  "name": "Dev Stack Minimal",
  "image": "ghcr.io/rcook0/dev-stack:runtime",
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "remoteEnv": {
    "PATH": "/opt/venv/bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "python3 -c 'import numpy, pandas, talib, pandas_ta_classic; print(\"Minimal stack OK\")'"
}
