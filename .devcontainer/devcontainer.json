{
  "name": "Dev Stack Workspace",
  "image": "ghcr.io/rcook0/dev-stack:dev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "root",
  "remoteEnv": {
    "PATH": "/opt/venv/bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "python3 -c 'import numpy, pandas, talib, pandas_ta_classic; print(\"Dev-Stack OK: NumPy\", numpy.__version__, \"Pandas\", pandas.__version__)'"
}
